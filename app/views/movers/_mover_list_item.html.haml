%li.row
  .panel-mule
    .panel-body
      .row
        .col-xs-12.text-center
          %span.lead
            = link_to mover_list_item.name, mover_path(mover_list_item.id)
      .row
        .col-xs-12.col-md-5
          %img.img-rounded.img-responsive.panel-hero{src: "http://placehold.it/300x150"}
        .col-xs-12.col-md-7
          .row
            .col-xs-4
              %img.img-rounded.img-responsive.thumbnail{src: "http://placehold.it/300x150"}
              - if mover_list_item.general_liability_insurance
                = "Insured"
            .col-xs-4
              %img.img-rounded.img-responsive.thumbnail{src: "http://placehold.it/300x150"}
              - if mover_list_item.year_started
                = "Since #{mover_list_item.year_started}"
            .col-xs-4
              %img.img-rounded.img-responsive.thumbnail{src: "http://placehold.it/300x150"}
              - if mover_list_item.avg_price_per_hour
                = "$#{mover_list_item.avg_price_per_hour} avg per hour"
    .description.col-xs-12
      %span= truncate(mover_list_item.description, length: 300) { link_to "Read More", mover_path(mover_list_item.id) }
    .row
      .col-xs-12.col-md-4
        .rating-container
          .rating{data: {rating: mover_list_item.yelp_stars}}
            %i.star-1 ★
            %i.star-2 ★
            %i.star-3 ★
            %i.star-4 ★
            %i.star-5 ★
      .col-xs-12.col-md-4.col-md-offset-4
        %a.btn.btn-primary.col-xs-12{data: { toggle: :modal, target: '#bookModal', mover: mover_list_item.name, mover_id: mover_list_item.id, stars: mover_list_item.yelp_stars }} Book
