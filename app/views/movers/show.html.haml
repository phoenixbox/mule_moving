.container.mule-panel
  .row
    .col-xs-12
      .panel-heading
        .row
          .col-xs-12
            %h2= @mover_detail.name
      .row.panel-heros
        .col-xs-12.col-sm-6
          %img.img-rounded.img-responsive{src: @mover_detail.hero_img}
        .col-xs-12.col-sm-6
          = render partial: "mover_icons", locals: {mover_list_item: @mover_detail}
      .row
        .col-xs-12.col-sm-6.text-center
          = render partial: "shared/yelp_stars", locals: {mover: @mover_detail }
          .text-center
            %span.lead
              = pluralize(@mover_detail.yelp_review_count || 0, "Review")
        .col-xs-12.col-sm-6{style: "padding-top: 30px"}
          %a.btn.btn-primary.col-xs-12{href: booking_path(@mover_detail.id)} Book
      .panel
        .panel-heading
          %span.lead Description
        .panel-body
          %p= @mover_detail.description
      .panel
        .panel-heading
          %span.lead Licenses & Compliance
        .panel-body
          .row
            .col-xs-12.col-md-6.license
              %ul.mover-detail-list
                %li.mover-detail-list-heading Licenses
                %li= "US Dot: #{content_tag :span, @mover_detail.us_dot, class: "pull-right"}".html_safe
            .col-xs-12.col-md-6.compliance
              %ul.mover-detail-list
                %li.mover-detail-list-heading Compliance
                %li= "Workers Compensation: #{icon_checkmark_or_not @mover_detail.workers_compensation}".html_safe
                %li= "Automobile Insurance: #{icon_checkmark_or_not @mover_detail.automobile_insurance}".html_safe
                %li= "Cargo Insurance: #{icon_checkmark_or_not @mover_detail.cargo_insurance}".html_safe
                %li= "General Liability Insurance: #{icon_checkmark_or_not @mover_detail.general_liability_insurance}".html_safe

      .panel
        .panel-heading
          %span.lead Services
        .panel-body
          .row
            .col-sm-6.col-md-3
              %ul.mover-detail-list
                %li.mover-detail-list-heading Pickup
                %li= "Packaging: #{icon_checkmark_or_not @mover_detail.packaging}".html_safe
                %li= "Crating: #{icon_checkmark_or_not @mover_detail.crating}".html_safe
                %li= "Furniture Wrapping: #{icon_checkmark_or_not @mover_detail.furniture_wrapping}".html_safe
                %li= "Furniture Disassembly: #{icon_checkmark_or_not @mover_detail.furniture_disassembly}".html_safe
                %li= "Personal Truck Loading: #{icon_checkmark_or_not @mover_detail.personal_truck_loading}".html_safe
                %li= "Appliances Uninstall: #{icon_checkmark_or_not @mover_detail.appliances_uninstall}".html_safe
            .col-sm-6.col-md-3
              %ul.mover-detail-list
                %li.mover-detail-list-heading Transport
                %li= "Shuttling: #{icon_checkmark_or_not @mover_detail.shuttling}".html_safe
                %li= "Storage: #{icon_checkmark_or_not @mover_detail.storage}".html_safe
                %li= "Extra Stops: #{icon_checkmark_or_not @mover_detail.extra_stops}".html_safe
            .col-sm-6.col-md-3
              %ul.mover-detail-list
                %li.mover-detail-list-heading Dropoff
                %li= "Furniture Assembly: #{icon_checkmark_or_not @mover_detail.furniture_assembly}".html_safe
                %li= "Appliances Install: #{icon_checkmark_or_not @mover_detail.appliances_install}".html_safe
            .col-sm-6.col-md-3
              %ul.mover-detail-list
                %li.mover-detail-list-heading Special
                %li= "Electronics Packaging: #{icon_checkmark_or_not @mover_detail.electronics_packaging}".html_safe
                %li= "Auto Transport: #{icon_checkmark_or_not @mover_detail.auto_transport}".html_safe
                %li= "Bulky Items: #{icon_checkmark_or_not @mover_detail.bulky_items}".html_safe
                %li= "Pianos: #{icon_checkmark_or_not @mover_detail.pianos}".html_safe
                %li= "Gun Safe: #{icon_checkmark_or_not @mover_detail.gun_safe}".html_safe
                %li= "Cleaning: #{icon_checkmark_or_not @mover_detail.cleaning}".html_safe

      .panel
        .panel-heading
          %span.lead Other
        .panel-body
          .row
            .col-xs-12.col-md-6
              %ul.mover-detail-list
                %li.mover-detail-list-heading Resources
                %li= "Employees: #{@mover_detail.employees}"
                %li= "Trucks: #{@mover_detail.trucks}"
            .col-xs-12.col-md-6
              %ul.mover-detail-list
                %li.mover-detail-list-heading Address
                %li= @mover_detail.address