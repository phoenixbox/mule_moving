:javascript
  var app = angular.module("mule");

  app.controller("LandingCtrl", function ($scope) {
    $scope.residence = 1;
    $scope.activeTab = function (tabIndex) {
      if ($scope.residence === tabIndex) {
        return "active"
      }
    }
  });