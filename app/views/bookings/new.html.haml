.container.mule-panel
  %h1 Book Mover
  %p.lead Almost there! Once you fill out the following form you will receive confirmation from us and your mover.
  %hr
  %h4= @mover.name
  .rating-container
    .rating{data: {rating: @mover.yelp_stars}}
      %i.star-1 ★
      %i.star-2 ★
      %i.star-3 ★
      %i.star-4 ★
      %i.star-5 ★

  %hr

  = form_tag bookings_path, role: "form" do
    = text_field_tag "booking[mover_id]", @mover.id, {hidden: true}
    = text_field_tag "booking[move_date]", nil, {hidden: true}
    .form-group
      = label_tag "booking[from]", "From"
      = text_field_tag "booking[from]", @from, {placeholder: "From", class: "form-control", required: true}
    .form-group
      = label_tag "booking[to]", "To"
      = text_field_tag "booking[to]", @to, {placeholder: "To", class: "form-control", required: true}
    .form-group
      = label_tag "booking[move_date]", "Move Date"
      = text_field_tag "booking[move_date]", nil, {placeholder: "Select a date", class: "form-control datepicker", required: true}
    .form-group
      = label_tag "booking[email]", "Email"
      = text_field_tag "booking[email]", nil, {placeholder: "Enter an email", class: "form-control", required: true}
    .form-group
      = submit_tag "Book", class: "btn btn-primary pull-right"

:javascript
  $("[name='booking[move_date]']").datepicker({
    autoclose: true
  });