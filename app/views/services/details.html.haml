.container.mule-panel
  .row
    .col-xs-4
      - @services.each do |service_category|
        %p.lead= "#{service_category[:category]} Services"
        %ul
          - service_category[:items].each do |service|
            %li= link_to service[:name], service_path(service[:id])
    .col-xs-8
      %h2= t("services.#{@service}.name")
      %hr
      %p= t("services.#{@service}.why")
      %p.lead How it works
      %p= t("services.#{@service}.how_it_works")
      %p.lead Required Actions
      %p= t("services.#{@service}.actions_required_by_user")
      %p.lead Pricing
      %ul
        - t("services.#{@service}.price").each do |price|
          %li= price
      %p.lead Suitable Inventory Items
      %ul
        - t("services.#{@service}.suitable_inventory").each do |item|
          %li= item