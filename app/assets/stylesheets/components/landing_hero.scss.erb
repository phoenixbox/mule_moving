$hero-input-size: 2.5em;

.hero {
    background: url(<%= asset_path 'landing_hero.png' %>) no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;

    height: 500px;
    padding-top: 80px;

    .title {
        // responsive font size from jquery fittext.js
        @include white-with-border;
        padding-bottom: 20px;
    }

    form {
        input[type="text"] {
            font-size: $hero-input-size;
            width: 100%;
            outline: 0;
            color: $gray;
        }
    }
}

.btn-discover {
    font-size: $hero-input-size;
    @extend .btn-block;
    @extend .btn-default;
    border-radius: 0px;
    outline: 0;
    margin: 35px auto 20px;
}
